{{!< default}}

<header id="header" class="header{{#if @blog.cover}} has-cover{{/if}}">

    <div class="inner">
		<span class="header-title">
            <figure class="header-image">
				<img src="/assets/img/jeroen.jpg" alt="Jeroen Druwé" />
			</figure>
            <h1 class="header-name">Jeroen Druwé <em>23</em></h1>
            {{#if @blog.description}}
                <span class="header-description">{{@blog.description}}</span>
            {{/if}}
            <span class="header-meta">
                    <span><i class="icon-location"></i> Mortsel</span>
                    <span><i class="icon-twitter"></i> <a target="_blank" href="https://twitter.com/JeroenDruwe">Twitter</a></span>
                    <span><i class="icon-github"></i> <a target="_blank" href="https://github.com/Jdruwe">Github</a></span>
			</span>
		</span>
    </div>
    {{#if @blog.cover}}
        <div class="header-cover" style="background-image: url('{{@blog.cover}}');"></div>
    {{/if}}
</header>

<div id="post-index" class="container">

	<main class="content" role="main">

        {{> "loop"}}

	</main>

</div>
